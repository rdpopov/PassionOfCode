<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Passion of code</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication3.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Event" asp-action="Year" asp-route-year="2024">Passion of code</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area=""
                                asp-controller="Event" asp-action="Archive"> Archive</a>
                        </li>

                    </ul>
                    @if ( Context.Session.GetString("uname") == null )
                    {
                        <ul class="navbar-nav flex-end">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area=""
                                   asp-controller="Home" asp-action="Login">Login</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ">

                            <li>
                                <p class="nav-link">
                                    User:
                                </p>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color:darkgreen" asp-area="" asp-controller="Event" asp-action="StatsUser">@Context.Session.GetString("uname")</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <maizn role="main" class="pb-3">
            @RenderBody()
        </maizn>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
